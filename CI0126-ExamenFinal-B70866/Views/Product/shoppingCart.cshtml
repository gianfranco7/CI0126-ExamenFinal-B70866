@{
    ViewBag.Title = "ShoppingCart";
}
<!DOCTYPE html>
<html>
<head>
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</head>
<body>
    <br />
    <h2 class="text-center">
        Mi Carrito de Compras
    </h2>
    <br />
    @{
        foreach (var product in ViewBag.productsInCart)
        {
            <div class="card">
                    <p class="card-text">Nombre del Producto: @product.name</p>
                    <p class="card-text">Cantidad en el carrito: @product.amount</p>
            </div>
            <br />
        }
        for (int i = 0; i < ViewBag.productDiscounts.Length; i++)
        {
            <div class="btn-outline-success">Descuento aplicado al producto @i : @ViewBag.productDiscounts[i]   </div>
        }
    }
    <div>Precio a pagar: @ViewBag.totalPrice </div>
    @Html.ActionLink("Proceder a Checkout", "buyProducts", "Product", new { @class = "btn btn-info btn-lg" })
</body>
</html>

