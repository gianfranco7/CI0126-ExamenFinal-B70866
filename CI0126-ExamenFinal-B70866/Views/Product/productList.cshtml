@{
    ViewBag.Title = "ProductList";
}
<!DOCTYPE html>
<html>
<body>
    <h4 class="text-center">
        Productos Disponibles
    </h4>
    @{
        foreach (var product in ViewBag.products)
        {
            <div>
                @product.name
            </div>
            <div>
                @product.description
            </div>
            <div>
                @product.discountAmount
            </div>
            <div>
                @product.price
            </div>
            <div>
                @product.discount
            </div>
            <div>
                <img src=@Url.Action("fileAccess", "Product", new {productID = product.id}) style="width:128px;height:128px;" />
            </div>
            <div>
                @Html.ActionLink("Añadir al carrito", "addProductToCart", "ShoppingCart", new { newProduct = product, amount = 1 }, new { @class = "btn btn-block light-blue lighten-4 black-text" })
            </div>
        }
    }
</body>
</html>