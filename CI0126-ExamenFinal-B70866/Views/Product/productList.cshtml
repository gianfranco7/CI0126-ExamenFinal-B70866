@{
    ViewBag.Title = "ProductList";
}
<!DOCTYPE html>
<html>
<head>
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
</head>
<body>
    <h4 class="text-center">
        Productos Disponibles
    </h4>
    @{
        foreach (var product in ViewBag.products)
        {
            <div>
                Nombre: @product.name
            </div>
            <div>
                Descripción: @product.description
            </div>
            <div>
                Cantidad para descuento: @product.discountAmount
            </div>
            <div>
                Precio: @product.price
            </div>
            <div>
                Descuento: @product.discount
            </div>
            <div>
                <img src=@Url.Action("fileAccess", "Product", new {productID = product.id}) style="width:128px;height:128px;" />
            </div>
            <div>
                @Html.ActionLink("Comprar individualmente", "addProductToCart", new { productID = product.id, amount = 1 }, new {@class = "btn btn-primary" })
            </div>
        }
    }
</body>
</html>