@model CI0126_ExamenFinal_B70866.Models.Customer
@{
    ViewBag.Title = "buyProducts";
}
<html>
<head>
    <script>
    function printMessage() {
        document.getElementById("message").innerHTML = "Productos Enviados";
    }
    </script>
</head>
<body>
    @using (Html.BeginForm("buyProducts", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert-success">
            <h3 id="message"></h3>
        </div>
        <br />
        <h2 class="text-center"> Comprar Productos </h2>
        <br />
        <div class="form-horizontal">
            <div class="input-group-lg">
                @Html.TextBoxFor(model => model.address, new { @class = "form-control", @placeholder = "Ingrese la dirección adonde se enviarán los productos" })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="row">
                <div class="col-6"><input type="submit" class="btn btn-lg btn-info" value="Comprar Productos" onclick="printMessage()" /></div>
                <div class="col-6">@Html.ActionLink("Volver al Carrito de Compras", "shoppingCart", "Product", new { @class = "btn btn-info btn-lg" })</div>               
            </div>
        </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>
