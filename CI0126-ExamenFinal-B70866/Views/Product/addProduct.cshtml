@model CI0126_ExamenFinal_B70866.Models.Product
@{
    ViewBag.Title = "addProduct";
}
<html>
<body>
    @using (Html.BeginForm("addProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        if (ViewBag.errorMsg != null)
        {
            <div class="alert-danger">
                <h5> @ViewBag.errorMsg </h5>
            </div>
        }
        <h4 class="text-center"> Añadir Producto</h4>
        <br />
        <div class="form-horizontal">
            <div class="input-field col s12">
                @Html.TextBoxFor(model => model.name, new { @class = "form-control", @placeholder = "Nombre del Producto" })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(model => model.description, new { @class = "form-control", @placeholder = "Decripción del Producto" })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(model => model.discountAmount, new { @class = "form-control", @placeholder = "Cantidad para descuento" })
                @Html.ValidationMessageFor(model => model.discountAmount, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(model => model.price, new { @class = "form-control", @placeholder = "Precio del Producto" })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(model => model.discount, new { @class = "form-control", @placeholder = "Descuento del Producto" })
                @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.image, new { type = "file", @class = "btn btn-block light-blue lighten-4 black-text", @value = "Ingrese la imagen para el producto" })
                @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
            </div>
            <input type="submit" class="btn btn-lg col-12" value="Añadir Producto" />
        </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>


